<div class="container">
<div class="raw">
  <div class="box2">
<div style="text-align: center;">
<h1>投稿詳細管理</h1>
<div style="font-size: 50px;"><%= @post.title %></div>
<div style="font-size: 20px;"><%= @post.body %></div>

<% @comments.reverse.each do |comment| %>
<div class="comment_in">
  <div class="nickname">
<span><%= comment.customer.nickname %></span>
</div>
<div class="comment">
<%= comment.body %>
<%= link_to '削除', admins_comment_path(comment), method: :delete, class: "link_delete"%>
</div>
</div>
<% end %>
</div>
</div>
  </div>
</div>
</div>
