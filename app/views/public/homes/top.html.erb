<div class="container">
  <div class="box">

    <h1>Game_Community</h1>
    <p>ようこそ</p>
    <p>みんなと話し合いましょう</p>
    
    
    <div class="post_search">
      <%= form_with url: search_public_post_index_path, method: :get, local: true do |f| %>
        <%= f.text_field :search, class: 'form-control', placeholder: "キーワード検索"  %>
        <%= f.submit "検索", style: "margin-top: 30px;" %>
      <% end %>
    </div>
    
    <h1 style="margin-top: 30px;">投稿一覧</h1>
    <div style="display: flex;">
      <% @post.each do |posts| %>
        <%= posts.genre_id%>
    
         <div style="width: 100%;    text-align: center;" ><%= link_to posts.title,public_post_path(posts) %></div>
      <% end %>
      </div>
  </div>
</div>