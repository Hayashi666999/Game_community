<div class="container">
  <div class="box1">

<h2 style="margin-top: 70px;">投稿ページ</h2>
<%= form_with model:@post, url: public_post_index_path do |f| %>
  <h6 style="margin-top: 30px;">ゲームタイトル</h6>
  <%= f.text_field :title %>

  <h6 style="margin-top: 30px;">タイトル概要</h6>
  <%= f.text_area :body %><br>
  <div style="margin-top: 30px;"><%= f.submit '投稿',class:"btn btn-success" %></div
<% end %>

  </div>
</div>