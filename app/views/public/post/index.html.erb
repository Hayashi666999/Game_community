<div class="container">
  <div class="box1">

<h1>投稿一覧</h1>

<div class="post_search">
      <%= form_with url: search_public_post_index_path, method: :get, local: true do |f| %>
        <%= f.text_field :search, class: 'form-control', placeholder: "キーワード検索"  %>
        <%= f.submit "検索", style: "margin-top: 30px;" %>
      <% end %>
</div>
<% @post.each do |posts| %>
<div style="text-align: -webkit-left;">
<%= posts.genre_id%>
<div class="link"><%= link_to posts.title,public_post_path(posts) %></div>
<%= simple_format(posts.body) %></div>
<% end %>
</div>
</div>