<h1>マイページ</h1>
<p>登録情報</p><%= link_to "編集する",public_customers_information_edit_path,class:"btn btn-success" %>
<table class="table table-bordered">
    <tr>
    <th>ニックネーム</th>
    <td><%= current_customer.nickname %></td>
    </tr>
    <tr>
    <th>メールアドレス</th>
    <td><%= current_customer.email %></td>
    </tr>
</table>

<h1>投稿ページ</h1>
<% if customer_signed_in? %>
  <%= button_to "投稿ページへ", public_post_page_path, method: :get %>
<% end %>

<% @post_page.each do |post_page| %>
<% if current_customer %>
  <span>投稿者：</span><%= post_page.create_customer.nickname %>
  <%= post_page.title %>
  <%= post_page.body %>
<% end %>
<% end %>