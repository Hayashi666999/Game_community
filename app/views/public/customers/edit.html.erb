<div class="container">
  <div class="box1">
    <div class="edit_in">

<h1>会員情報編集</h1>
<%= form_with model: @customer, url: public_customers_information_path do |f| %>
<table>
    <tr>
    <th>ニックネーム</th>
      <td>
        <%= f.text_field :nickname %>
      </td>
    </tr>
    <tr>
    <th>メールアドレス</th>
      <td><%= f.email_field :email %></td>
    </tr>
    <td><%= f.submit "編集内容を保存",class:"btn btn-success" %></td>
</table>
<% end %>
<div class="text-right">
<%= link_to "退会する", public_customers_unsubscribe_confirm_path,class:"btn btn-danger" %>
  </div>
  </div>
</div>
</div>