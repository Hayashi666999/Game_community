<!DOCTYPE html>
<html>
  <head>
    <title>GameCommunity</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <header class="sticky-top">
      <nav class="navbar navbar-expand-md navbar-dark bg-dark text-white">
        <a>
          <%= link_to 'TOP', root_path, data: {"turbolinks" => false} %>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
              <li class="nav-item">
                <%= link_to 'マイページ', public_customers_mypage_path,class: 'btn btn-light' %>
              </li>
              <li class="nav-item">
                <%= link_to '投稿一覧', public_post_index_path,class: 'btn btn-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'いいね一覧', public_nices_path,class: 'btn btn-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete,class: 'btn btn-light' %>
              </li>
            <% elsif admin_signed_in? %>
            <%= link_to '投稿一覧', admins_posts_path %>
            <%= link_to '会員一覧', admins_path %>
            <%= link_to 'ジャンル一覧', admins_genres_path %>
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
            <% else %>
              <li class="nav-item">
                <%= link_to '投稿一覧', public_post_index_path %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_customer_registration_path %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_customer_session_path %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

  <body>
    <%= yield %>
  </body>
</html>
